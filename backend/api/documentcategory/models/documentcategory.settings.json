{
  "kind": "collectionType",
  "collectionName": "documentcategories",
  "info": {
    "name": "Document category"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "order": {
      "type": "integer"
    },
    "documents": {
      "collection": "document",
      "via": "documentcategory"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "videos": {
      "collection": "video",
      "via": "documentcategory"
    },
    "articles": {
      "collection": "article",
      "via": "document_category"
    }
  }
}
